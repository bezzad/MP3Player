<Application x:Class="MP3Player.Sample.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ImageSource x:Key="PlayImage">Resources/PlayImage.png</ImageSource>
            <ImageSource x:Key="PauseImage">Resources/PauseImage.png</ImageSource>
            <ImageSource x:Key="NextImage">Resources/NextImage.png</ImageSource>
            <ImageSource x:Key="PreviousImage">Resources/PreviousImage.png</ImageSource>

            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design -->
                <materialDesign:CustomColorTheme BaseTheme="Light" PrimaryColor="#FF00A2A4" SecondaryColor="#FF00B1B5" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
